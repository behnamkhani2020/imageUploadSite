<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

<div class="container mt-3">
    <nav class="navbar navbar-expand-sm bg-light justify-content-center">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#">upload website</a>
            </li>
        </ul>
    </nav>

  <h2>Upload picture</h2>
  <form action="/upload" method="POST" enctype="multipart/form-data">
    <div class="mb-3 mt-3">
      <label for="img">choose your picture:</label>
      <input type="file" class="form-control" id="img" placeholder="choose picture" name="img" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
<br/>
<div class="container">
  <div class="row">
    <% images.forEach(image => { %>
      <div class="col-4">
        <div class="card">
          <div class="card-header d-flex justify-content-center">
            <img src="http://localhost:3500/uploads/<%= image.name %> " class = "mx-auto" alt="no image">
          </div>
          <div class="card-body">
            <a href="/copy" class="btn btn-block bg-info">copy link</a>
            <a href="/delete/<%= image.id %> " class="btn btn-block bg-danger">Delete image</a>
          </div>
        </div>
      </div>
      <% }) %> 
  </div>
</div>
</body>
</html>